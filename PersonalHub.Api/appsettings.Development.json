{
    "Serilog": {
        "Using": [ "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log-.txt",
                    "rollingInterval": "Day"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName" ],
        "Properties": {
            "ApplicationName": "PersonalHub"
        }
    },
    "ConnectionStrings": {
        "PersonalHubDbContext": ""
    },
    "JwtSettings": {
        "Issuer": "https://localhost:7149/",
        "Audience": "https://localhost:7149/",
        "DurationInMinutes": 15,
        "Key": ""
    },
    "UserAuth": {
        "FirstName": "",
        "LastName": "",
        "Email": "",
        "Pwd": "",
        "UserId": "",
        "RoleId": ""
    }
}
